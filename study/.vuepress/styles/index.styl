// 基础样式重置
* {
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  color: #2c3e50;
}

// 简单的响应式设计
@media (max-width: 768px) {
  .home {
    .hero {
      padding: 2rem 1rem;
      
      h1 {
        font-size: 2rem;
      }
      
      .description {
        font-size: 1rem;
      }
    }
    
    .features {
      padding: 2rem 1rem;
    }
  }
  
  .page {
    padding: 1rem;
  }
} 